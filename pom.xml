  <artifactId>CrispyCommons</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>CrispyCommons</name>

  <modules>
    <module>crispycommons-core</module>
      <module>crispycommons-nms-1-8-R3</module>
      <module>crispycommons-spigot</module>
      <module>crispycommons-nms-1-20-R3</module>
